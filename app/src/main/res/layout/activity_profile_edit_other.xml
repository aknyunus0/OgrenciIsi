<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEdit_Other"
    android:background="#F2F2F2">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="#ffffff"
            android:id="@+id/toolbarid"
            >

            <ImageView
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:paddingLeft="40dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingRight="30dp"


                />
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_inbox"
                />

        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/other_profile_image1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/profile"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/ShapeAppearance.App.CircleImageView"
                        android:layout_marginTop="20dp"

                        />

                    <TextView
                        android:id="@+id/other_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="İsim"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toRightOf="@id/other_profile_image1"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/other_profile_name"
                        app:layout_constraintLeft_toRightOf="@id/other_profile_image1"
                        android:id="@+id/other_editname"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/profileedittext"
                        android:padding="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Soyisim"
                        android:textSize="15dp"
                        app:layout_constraintLeft_toRightOf="@id/other_profile_image1"
                        app:layout_constraintTop_toBottomOf="@id/other_editname"
                        android:id="@+id/bolum"
                        android:textStyle="bold"

                        />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/other_editsurname"
                        app:layout_constraintTop_toBottomOf="@id/bolum"
                        app:layout_constraintLeft_toRightOf="@id/other_profile_image1"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/profileedittext"
                        android:padding="5dp"
                        android:textSize="15dp"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Konum"
                        android:textSize="15dp"
                        android:id="@+id/Konum"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/other_KonumEdit"
                        android:background="@drawable/profileedittext"
                        android:padding="5dp"
                        android:textSize="15dp"
                        app:layout_constraintTop_toBottomOf="@id/Konum"
                        app:layout_constraintLeft_toLeftOf="parent" />



                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Şirket"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"

                    />
                <EditText
                    android:id="@+id/other_sirketEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profileedittext"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uzmanlık Alanı"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"

                    />
                <EditText
                    android:id="@+id/other_uzmanlikEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profileedittext"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hakkında"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"

                    />
                <EditText
                    android:id="@+id/other_HakkimdaEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profileedittext"
                    android:padding="5dp"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:minHeight="120dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Değişiklikleri Kaydet"
                        android:id="@+id/Btn_editprofile_other"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/editprofile"
                        android:textColor="#2B62D6"
                        android:textSize="15dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>