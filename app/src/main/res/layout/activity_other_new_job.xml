<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Other_New_Job">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:scrollbarStyle="insideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="İlan Adı"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/job_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/profileedittext"
                android:hint="İlan Adı"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Pozisyon"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText

                android:id="@+id/job_position"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/profileedittext"
                android:hint="Pozisyon"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Çalışma Türü"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_ip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="İş Tanımı"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profileedittext"
                android:hint="İş Tanımı"
                android:minHeight="200dp"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Aranan Özellikler"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/job_needs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profileedittext"
                android:hint="Aranan Özellikler"
                android:minHeight="200dp"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:text="Son Başvuru Tarihi"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/job_deadline"
                android:layout_width="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:background="@drawable/profileedittext"
                android:drawableRight="@drawable/date_picker_icon"
                android:text="Son başvuru Tarihi"
                android:padding="10dp" />


            <Button
                android:id="@+id/job_save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İlanı Yayınla" />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>